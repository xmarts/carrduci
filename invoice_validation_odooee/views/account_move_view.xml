<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record model="ir.ui.view" id="view_account_move_form_generar_cfdi">
	  <field name="name">account.move.form.generar.cfdi</field>
	  <field name="model">account.move</field>
	  <field name="inherit_id" ref="account.view_move_form"/>
	  <field name="arch" type="xml">
		    <button name="action_post" position="after">
		      <button name="action_generar_cfdi" string="Generar CFDI" class="oe_highlight"
                                type="object" groups="account.group_account_invoice"
                                attrs="{'invisible': ['|',('state', '!=', 'posted'),('l10n_mx_edi_pac_status', '=', 'signed')]}"/>
		    </button>
	  </field>
	</record>
</odoo>